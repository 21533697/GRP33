@model MyBookingRoles.Models.Store.Product

@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>
    @Html.DisplayFor(model => model.ProductName) Details
</h2>


@{
    decimal sum = 0;

    decimal p = Model.Price * 20 / 100;
    sum = Model.Price + p;
}

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-md-push-2">
                <div id="product-main-img">
                    <div class="product-preview">

                        @if (Model.ProductPics != null)
                        {
                            var base64 = Convert.ToBase64String(Model.ProductPics);
                            var imgsrc = string.Format("data:image/gif;base64,{0}", base64);

                            <img src='@imgsrc' style="width:350px;height:350px" class="img-responsive" />

                        }
                      
                    </div>
                    <!-- Product details -->
                    <div class="col-md-5">
                        <div class="product-details">
                            <h2 class="product-name">@Model.ProductName</h2>
                            <div>
                                <div class="product-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-o"></i>
                                </div>
                                <a class="review-link" href="#">@ViewBag.reviews | Add your review</a>
                            </div>
                            <div>
                                <h3 class="product-price">R @Model.Price <del class="product-old-price">@sum</del></h3>
                                <span class="product-available">In Stock</span>
                            </div>
                            
                            <div class="add-to-cart">
                                <div class="qty-label">
                                    Qty
                                    <div class="input-number">
                                        <input type="number">
                                        <span class="qty-up">+</span>
                                        <span class="qty-down">-</span>
                                    </div>
                                </div>
                                <button class="add-to-cart-btn"><i class="fa fa-shopping-cart" @Html.ActionLink("OrderNow","ShoppingCart", new { id = Model.ProductID }, "")></i> add to cart</button>
                            </div>

                            <ul class="product-btns">
                                <li><a href="@Url.Action("Add","Wishlist",new { id=Model.ProductID})"><i class="fa fa-heart-o"></i> add to wishlist</a></li>

                                @Html.ActionLink("Order Now", "OrderNow", "ShoppingCart", new { id = Model.ProductID }, new { @class = "btn btn-success" })
      
                            </ul>

                            <ul class="product-links">
                                <li>Category:</li>
                                <li><a href="#">@Model.Category.CategoryName</a></li>

                            </ul>


                        </div>
                    </div>
                    <!-- /Product details -->
                    <div class=" col-md-12">
                        <div class="products-tabs">
                            <ul class=" tab-nav">
                                <li class="active"><a data-toggle="tab" href="#tab1">Description</a></li>
